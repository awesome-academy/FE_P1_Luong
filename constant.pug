mixin table-item(item1,item2,item3,item4,item5,item6,item7)          
    tr.shopping-cart__tr
                td.shopping-cart__item=item1
                td.shopping-cart__item
                    img(src=item2)
                td.shopping-cart__item=item3
                td.shopping-cart__item=item4
                td.shopping-cart__item=item5
                td.shopping-cart__item=item6
                td.shopping-cart__item
                    strong=item7